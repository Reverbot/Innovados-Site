---
interface Props {
  lang?: string;
  isEN?: boolean;
}

const { lang = 'es', isEN = false } = Astro.props;
---

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-brand">
      <img 
        src="/INNOVADOS_WEB_Logo_Digital_Marketing.png" 
        alt="Innovados logo" 
        class="footer-logo" 
        width="160"
        height="40"
      />
      <p class="footer-tagline">
        {isEN 
          ? "We boost brands with digital strategies that sell." 
          : "Impulsamos marcas con estrategias digitales que venden."}
      </p>
    </div>

    <nav class="footer-nav">
      <h3 class="footer-heading">{isEN ? "Menu" : "Menú"}</h3>
      <ul class="footer-nav-list">
        <li><a href={isEN ? "/en/" : "/"} class="footer-link">{isEN ? "Home" : "Inicio"}</a></li>
        <li><a href={isEN ? "/en/services" : "/servicios"} class="footer-link">{isEN ? "Services" : "Servicios"}</a></li>
        <li><a href={isEN ? "/en/portfolio" : "/portafolio"} class="footer-link">{isEN ? "Portfolio" : "Portafolio"}</a></li>
        <li><a href={isEN ? "/en/about" : "/nosotros"} class="footer-link">{isEN ? "About" : "Nosotros"}</a></li>
        <li><a href={isEN ? "/en/blog" : "/blog"} class="footer-link">Blog</a></li>
      </ul>
    </nav>

    <div class="footer-contact">
      <h3 class="footer-heading">{isEN ? "Contact" : "Contacto"}</h3>
      <ul class="footer-contact-list">
        <li>
          <a href="mailto:hola@innovados.com" class="footer-link">
            <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            hola@innovados.com
          </a>
        </li>
        <li>
          <a href="tel:+1234567890" class="footer-link">
            <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            +1 (234) 567-890
          </a>
        </li>
      </ul>
    </div>

    <div class="footer-social">
      <h3 class="footer-heading">{isEN ? "Follow us" : "Síguenos"}</h3>
      <div class="social-links">
        <a href="https://instagram.com/innovados" aria-label="Instagram" class="social-link">
          <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
        </a>
        <a href="https://linkedin.com/company/innovados" aria-label="LinkedIn" class="social-link">
          <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>
        <a href="https://facebook.com/innovados" aria-label="Facebook" class="social-link">
          <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p class="copyright">&copy; {new Date().getFullYear()} Innovados. {isEN ? 'All rights reserved.' : 'Todos los derechos reservados.'}</p>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--clr-dark);
    color: var(--clr-light);
    padding: 4rem 0 0;
    font-size: 0.95rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2.5rem;
  }

  .footer-brand {
    max-width: 300px;
  }

  .footer-logo {
    height: 40px;
    width: auto;
    margin-bottom: 1rem;
  }

  .footer-tagline {
    color: var(--clr-light-400);
    line-height: 1.6;
    margin: 0;
  }

  .footer-heading {
    color: var(--clr-light);
    font-size: 1.1rem;
    margin-bottom: 1.25rem;
    font-weight: 600;
  }

  .footer-nav-list,
  .footer-contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link {
    color: var(--clr-light-400);
    text-decoration: none;
    transition: color 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-link:hover {
    color: var(--clr-primary);
  }

  .footer-icon {
    flex-shrink: 0;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .social-link {
    color: var(--clr-light);
    background: rgba(255, 255, 255, 0.1);
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--clr-primary);
    transform: translateY(-2px);
  }

  .social-icon {
    width: 18px;
    height: 18px;
  }

  .footer-bottom {
    margin-top: 3rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.5rem 0;
  }

  .copyright {
    text-align: center;
    color: var(--clr-light-400);
    font-size: 0.85rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-brand {
      max-width: 100%;
      text-align: center;
    }

    .footer-logo {
      margin: 0 auto 1rem;
    }

    .footer-nav,
    .footer-contact,
    .footer-social {
      text-align: center;
    }

    .footer-nav-list,
    .footer-contact-list {
      align-items: center;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>

---
import Base from '../../layouts/Base.astro';
import Hero from '../../components/home/Hero.astro';
import About from '../../components/home/About.astro';
import Services from '../../components/home/Services.astro';
import Launch from '../../components/home/Launch.astro';
import Portfolio from '../../components/home/Portfolio.astro';
import Testimonials from '../../components/home/Testimonials.astro';
import Contact from '../../components/home/Contact.astro';

const { lang = 'es' } = Astro.params;

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}
---

<Base title="Innovados" lang={lang}>
  <main>
    <Hero lang={lang} />
    <About lang={lang} />
    <Services lang={lang} />
    <Launch lang={lang} />
    <Portfolio lang={lang} />
    <Testimonials lang={lang} />
    <Contact lang={lang} />
  </main>
</Base>

<style>
  .section-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, #ddd, transparent);
    margin: 4rem 0;
    width: 100%;
  }
</style>
